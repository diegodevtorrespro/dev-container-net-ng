{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (.NET Launch - HTTP ONLY)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/backend/bin/Debug/net8.0/backend.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/backend",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:8087"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on:\\s+http://0.0.0.0:8087"
      }
    }
  ]
}
